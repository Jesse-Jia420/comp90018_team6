<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/exercise_home"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    app:behavior_hideable="false"
    app:behavior_peekHeight="45dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/exercise_button1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_accessibility_24" />
        <TextView
            android:layout_width="164dp"
            android:layout_height="44dp"
            android:text="@string/personal_info"
            android:textSize="25sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <Button
            android:id="@+id/exercise_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_directions_run_24" />

        <TextView
            android:layout_width="164dp"
            android:layout_height="44dp"
            android:text="@string/start_running"
            android:textSize="25sp" />
    </LinearLayout>
    <Button
        android:id="@+id/pedometer_stepCount"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="100dp"

        android:layout_gravity="center_horizontal"

        android:background="@drawable/ic_baseline_panorama_fish_eye_24"
        android:textSize="50sp"
        android:textColor="@color/purple_500"
        android:text="@string/_0"/>


</androidx.appcompat.widget.LinearLayoutCompat>